@page
@using Microsoft.AspNetCore.Mvc.Localization
@using ToksozBysNew.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using ToksozBysNew.Web.Pages.CompanyCalendars
@using ToksozBysNew.CompanyCalendars;
@using System.Globalization
@inject IHtmlLocalizer<ToksozBysNewResource> L
@model CreateModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/CompanyCalendars/CreateModal" autocomplete="off">
    <abp-modal id="CompanyCalendarCreateModal">
        <abp-modal-header title="@L["NewCompanyCalendar"].Value"></abp-modal-header>

        <abp-modal-body>
                    
            <abp-input asp-for="CompanyCalendar.CompanyCalendarDate" value="@DateTime.Now.ToString("yyyy-MM-dd")" type="date"/>

            <abp-input asp-for="CompanyCalendar.IsWeekend" />

            <abp-input asp-for="CompanyCalendar.IsHoliday" />

                    
                
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>