@page
@using Microsoft.AspNetCore.Mvc.Localization
@using ToksozBysNew.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using ToksozBysNew.Web.Pages.Products
@using ToksozBysNew.Products;
@using System.Globalization
@inject IHtmlLocalizer<ToksozBysNewResource> L
@model CreateModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/Products/CreateModal" autocomplete="off">
    <abp-modal id="ProductCreateModal">
        <abp-modal-header title="@L["NewProduct"].Value"></abp-modal-header>

        <abp-modal-body>
                    
            <abp-input asp-for="Product.ProductName" />

                    
                
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>