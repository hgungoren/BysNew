@page
@using Microsoft.AspNetCore.Mvc.Localization
@using ToksozBysNew.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using ToksozBysNew.Web.Pages.Districts
@using ToksozBysNew.Districts;
@using System.Globalization
@inject IHtmlLocalizer<ToksozBysNewResource> L
@model CreateModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/Districts/CreateModal" autocomplete="off">
    <abp-modal id="DistrictCreateModal">
        <abp-modal-header title="@L["NewDistrict"].Value"></abp-modal-header>

        <abp-modal-body>
                    
            <abp-input asp-for="District.DistrictName" />

                                <abp-select asp-for="District.CountryId" asp-items="Model.CountryLookupList" label="@L["Country"].Value"/>            <abp-select asp-for="District.ProvinceId" asp-items="Model.ProvinceLookupList" label="@L["Province"].Value"/>
                
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>