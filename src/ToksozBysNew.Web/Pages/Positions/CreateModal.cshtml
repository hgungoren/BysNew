@page
@using Microsoft.AspNetCore.Mvc.Localization
@using ToksozBysNew.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using ToksozBysNew.Web.Pages.Positions
@using ToksozBysNew.Positions;
@using System.Globalization
@inject IHtmlLocalizer<ToksozBysNewResource> L
@model CreateModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/Positions/CreateModal" autocomplete="off">
    <abp-modal id="PositionCreateModal">
        <abp-modal-header title="@L["NewPosition"].Value"></abp-modal-header>

        <abp-modal-body>
                    
            <abp-input asp-for="Position.PositionCode" />

            <abp-input asp-for="Position.PositionName" />

                    
                
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>