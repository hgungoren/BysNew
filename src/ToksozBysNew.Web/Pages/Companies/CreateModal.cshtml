@page
@using Microsoft.AspNetCore.Mvc.Localization
@using ToksozBysNew.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using ToksozBysNew.Web.Pages.Companies
@using ToksozBysNew.Companies;
@using System.Globalization
@inject IHtmlLocalizer<ToksozBysNewResource> L
@model CreateModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/Companies/CreateModal" autocomplete="off">
    <abp-modal id="CompanyCreateModal">
        <abp-modal-header title="@L["NewCompany"].Value"></abp-modal-header>

        <abp-modal-body>
                    
            <abp-input asp-for="Company.CompanyName" />

            <abp-input asp-for="Company.IsActive" />

                    
                
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>