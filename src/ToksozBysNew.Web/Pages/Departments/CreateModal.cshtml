@page
@using Microsoft.AspNetCore.Mvc.Localization
@using ToksozBysNew.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using ToksozBysNew.Web.Pages.Departments
@using ToksozBysNew.Departments;
@using System.Globalization
@inject IHtmlLocalizer<ToksozBysNewResource> L
@model CreateModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/Departments/CreateModal" autocomplete="off">
    <abp-modal id="DepartmentCreateModal">
        <abp-modal-header title="@L["NewDepartment"].Value"></abp-modal-header>

        <abp-modal-body>

            <abp-input asp-for="Department.DepartmentName" />

            <abp-select asp-for="Department.CompanyId" asp-items="Model.CompanyLookupList" label="@L["Company"].Value" />

        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>